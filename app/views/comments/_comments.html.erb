<div class="card">
  <br>
  <span class="display-4 text-center">
    <strong>
    <p style="font-size:50%;">
      <%=  commentable.comments.count %> <%= "#{commentable.comments.size == 1 ? 'Comment:' : 'Comments:'}"%>
    </p>
  </strong>
  </span>

<% commentable.comments.reverse.each do |comment| %>
  <div class="p-4">
    <div class="card p-8">
      <%#= link_to "#{comment.body}", comment %>
        <div class="text-center">
            <span>

              <!-- Edit Comment -->
              <span class="float-left" type="" data-toggle="modal" data-target="#CommentModal">
                <!-- Edit Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                </svg>
              </span>




              <span class="float-right">
                <%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure you would like to delete this comment?' }, class:"text-red-400 hover:text-red-700 " %>
              </span>





              <!-- Comment Modal Begin -->
              <div class="modal fade" id="CommentModal" tabindex="-1" role="dialog" aria-labelledby="CommentModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="CommentModalLabel">
                      <!-- Comment Title -->
                      Editing Comment
                      </h5>

                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <div class="display-4 text-center">

                        <!-- Comment Update Form -->
                        <%= form_for [commentable, comment] do |f| %>
                        <!-- <div class="form-group">
                          <%= f.label :user_id%>
                          <%= f.text_field :user_id, class:"form-control", :value => current_user.id %>
                        </div> -->
                        <br>
                        <div class="form-group">
                          <%= f.text_field :body, class:"form-control" %>
                        </div>
                         <hr>
                        <%= f.submit "Update Comment", class:"btn btn-primary"%>
                        <% end %> <!-- Comment Form End -->

                      </div>
                      <br>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Comment Modal End -->

              <br>

             </span>
            <%= comment.body %>
        </div>
    </div>
    <br>
  </div>
<% end %>

<br>
</div>
