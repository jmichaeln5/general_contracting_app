    <%#= link_to "#{project.title}", project %>
    <span class="p-2">

      <span class="p-2">





      </span>


      <br>

      <div class="text-center">

        <% if @project.title %>
          <strong>Project Title:</strong> <%= @project.title %> <br>
        <% end %>

        <% if @project.category %>
          <strong>Project Type:</strong> <%= @project.category %> <br>
        <% end %>

        <% if @project.payment_method %>
          <strong>Payment Method:</strong> <%= @project.payment_method %> <br>
        <% end %>


        <% if @project.estimated_cost %>
          <strong>Estimated Cost:</strong> $<%= @project.estimated_cost %> <br>
        <% end %>



        <% if @project.cost %>
          <strong>Cost:</strong> $<%= @project.cost %> <br>
        <% end %>

      </div>

      <br>
    </span>

  </div>






</div>

