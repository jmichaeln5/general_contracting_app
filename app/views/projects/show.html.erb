<div class="card container">

<div class="display-4 text-center">

  <span class="float-left pt-2 pl-2" style="font-size:40%;">
    <% if ( @project.status ==  "Uninitiated" ) %>

      <p style="color:grey;" >
        Inactive
      </p>

    <% elsif ( @project.status ==  "Completed" ) %>

      <p style="color:green;">
        Completed
      </p>

    <% elsif ( @project.status ==  "Rejected" ) %>

      <p style= "color:red;">
        Rejected
      </p>

    <% else %>

      <p style="color:green;">
        <%= @project.status %>
      </p>

    <% end %>
  </span>

  <br>




  <%= @project.title.capitalize %>

