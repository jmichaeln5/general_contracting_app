<div class="card container">
<div class="display-4 text-center py-5">
  <%= @client.name %> <%= "(#{@client.type_of_project})" if @client.type_of_project.present? %>
  <div class="display-4 text-center">
    <p style="font-size:50%;">
      <% if @client.phone_number.present? %>
        <br>
        Phone: <%= @client.phone_number %>
      <% end %>
      <% if @client.email.present? %>
        <br>
        Email: <%= @client.email %>
      <% end %>
      <% if @client.description.present? %>
        <br>
        <%= @client.description %>
      <% end %>
    </p>
  </div>

  <span class="text-center">
  <%= link_to 'Edit Client', edit_client_path(@client), class:"btn btn-outline-secondary" %>
  </span>
</div>
<%= render partial: "projects/projects", locals: {projectable: @client}%>
<br>
<!-- Project Modal Button -->
<button type="button" class="btn btn-lg btn-primary" data-toggle="modal" data-target="#exampleModal">
  Add Project
</button>
<!-- Project Modal Begin -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
           New Project for <%= @client.name %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <!-- Project Form -->
        <div class="display-4 text-center">
          <%= render partial: "projects/form", locals: {projectable: @client}%>
        </div>
        <br>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<!-- Project Modal End -->
